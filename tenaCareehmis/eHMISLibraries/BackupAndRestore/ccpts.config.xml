<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- This file is for values that should be writable from the application. -->
    <!-- COMMENT OUT lines rather than deleting them -->
    <!-- Note: passwords are compiled into the app so that they are not exposed as plain text in this file. -->

    <!-- DB Connection instructions:  If you receive a DDAC error when starting the program, the error is
		due to a bad DB connection string.  You must confirm that the connection string below is pointing to
		the correct address AND the correct DB name.  By default, this name should be CDC_FDB_DB and CDC_API_DB  -->

    <!-- DB Connection Component Parts -->
    <add key="DatabaseHost" value="(local)" />
    <add key="DatabaseInstanceName" value="smartcare40" />
    <add key="DatabaseName" value="CDC_FDB_DB" />  
    <add key="DatabaseUser" value="sa" />
    <add key="DatabasePassword" value="" />

    <!-- to make a module not load, put it here and set the value to ignore_load -->
    <add key="locale" value="Ethiopia"/>

    <!-- Maximum number of allowed patient search results -->
    <add key="MaxPatientSearchResultCount" value="300"/>

    <!-- Enable or Disable the auto MRN generator functionality. true/false -->
    <add key="Enable_Auto_MRN_Generator" value="true"/>

    <!-- Enable or Disable the auto Client Code generator functionality. true/false -->
    <add key="Enable_Auto_ClientCode_Generator" value="true"/>

    <!-- Enable or Desable the auto Couple Code generator functionality. true/false -->
    <add key="Enable_Auto_CoupleCode_Generator" value="true"/>
    

    <!-- Enable auto generate new born baby functionality. true/false -->
    <add key="AutoGenerateNewBornBaby" value="true"/>
    
    <!-- Enable or Desable the Pediatrics Age Use true/false -->
    <add key="UsePediatricsAge" value="false"/>

    <!--POP3 Server Name-->
    <add key="POP3Server" value="pop.gmail.com"/>

    <!--POP3 Port-->
    <add key="Port" value="995"/>
    
    <!--MaxDownloadEmails-->
    <add key="MaxDownloadEmails" value="5"/>

    
    
  </appSettings>
</configuration>

